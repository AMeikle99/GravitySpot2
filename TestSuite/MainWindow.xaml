<Window x:Class="TestSuite.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestSuite"
        mc:Ignorable="d"
        Title="Gravity Spot 2 - Test Suite"
        WindowState="Maximized" WindowStyle="None"
        Background="Black">
    <Grid x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="TestingLabel" Text="Testing" Foreground="White" 
                   FontSize="36" HorizontalAlignment="Right"
                   Grid.Row="0"/>
        <Viewbox Grid.Row="0" HorizontalAlignment="Center">
            <Canvas x:Name="SkeletonGrid" Width="512" Height="414"/>
        </Viewbox>
    </Grid>
</Window>
